<div>
    <div class="jumbotron bg-light p-4">
    <h1 class="display-4">
      <%= @friend.first_name %>
      <%= @friend.last_name %>
    </h1>
    <p class="lead">
      Email: <%= @friend.email %> |
      Phone: <%= @friend.phone %> |
      Twitter: <%= @friend.twitter %>
    </p>
    <hr class="my-4">
    <p> Hi my name is <%= @friend.first_name %>. I like animals of all sorts, traveling, and also EATING! If you want to get in touch with me please look at my contact information above! </p>
    <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-secondary"%>
    <%= link_to "Back to friends", friends_path, class:"btn btn-secondary"%>
    <br/>
    <br/>
    <%= button_to "Delete friend", @friend, class:"btn btn-danger", method: :delete%>
  </div>

</div>